<!doctype html>
<html lang="en" class="no-js">
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb#">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@(string.IsNullOrEmpty(Page.Title) ? string.Empty : Page.Title + " | ")RobIII</title>
    <meta name="description" content="@Page.Description">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Noto+Serif:400,700,400italic|Open+Sans:700,400">
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/bundles/js-head")

    <meta property="og:title" content="@(string.IsNullOrEmpty(Page.Title) ? string.Empty : Page.Title + " | ")RobIII">
    <meta property="og:url" content="http://robiii.me/">
    <meta property="og:image" content="http://robiii.me/img/back.jpg">
    <meta property="og:description" content="@Page.Description" />
    <meta property="og:locale" content="en-US" />
</head>

<body>
    <div class="container">
        <!--[if lt IE 9]>
            <p class="alert alert-danger text-center">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.
            </p>
        <![endif]-->
    </div>
    <div class="site-head">
        <div class="container container-fluid">
            <div class="row">
                <div class="col-md-2 col-md-offset-1">
                    <div id="user-image" title="RobIII's Picture"></div>
                </div>
                <div class="col-md-7">
                    <h1 class="site-title">Rob Janssen <small class="hidden-xs">(RobIII)</small></h1>
                    <h2 class="site-description hidden-xs">Software engineer at <a href="http://keensystems.eu">KeenSystems</a>, moderator &amp; mediator @@<a href="http://tweakers.net/gallery/robiii">GoT</a> and proud father of two <a href="http://lucajanssen.nl">great</a> <a href="http://danujanssen.nl">sons</a>. Pretty much all-round developer.</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="container container-fluid">
        <div class="row">
            <ul id="nav" class="nav nav-tabs nav-justified">
                <li class="@(Html.ActivePage<BlogrollController>())">@Html.ActionLink("I write", "Index", "Blogroll")</li>
                <li class="@(Html.ActivePage<StaticController>("page", "code"))">@Html.ActionLink("I code", "Index", "Static", new { Page = "code" }, null)</li>
                <li class="@(Html.ActivePage<PocketController>())"><a href="/pocket/all">I read</a></li>
                <li class="@(Html.ActivePage<StaticController>("page", "contact"))">@Html.ActionLink("Contact", "Index", "Static", new { Page = "contact" }, null)</li>
            </ul>

            <div class="tab-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="text-center">
        &copy; 2000 - @DateTime.Now.Year Rob Janssen
    </footer>


